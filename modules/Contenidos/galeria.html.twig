{% set nThumbnail = values.galeriaFotos.bloqueThumbnail|length %}

{% if nThumbnail > 0 %}
    <div id="carrusel">

        <div class="contenidoTop"></div>
        <div class="contenidoInter">
            <h6>Galer√≠a</h6>
            <ul class="galeria">
                {% for key, galeria in values.galeriaFotos.bloqueThumbnail %}
                    <li {% if values.galeriaFotos.nThumbnail==key %}class="ultimo"{% endif %}>
                        <a href="{{app.path}}/{{galeria.PathName}}" rel="gallery" class="pirobox_gall" title="{{galeria.Title}}"><img src="{{app.path}}/{{galeria.PathNameThumbnail}}" alt="{{galeria.Title}}" title="{{galeria.Title}}" /></a>
                    </li>
                {% endfor %} 
            </ul>
            
            {% for galeria in values.galeriaFotos.restoImagenes %}
                <a href="{{app.path}}/{{galeria.PathName}}" rel="gallery" class="pirobox_gall" title="{{galeria.Title}}"></a>
            {% endfor %}
        </div>
        <div class="contenidoBottom"></div>

    </div>
{% endif %}